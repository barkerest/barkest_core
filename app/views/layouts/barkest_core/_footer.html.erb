<div class="container">
  <footer>
    <%= render 'layouts/footer_copyright' %>
    <nav>
      <ul>
        <%= render_for_namespace 'menu_footer' %>
        <% BarkestCore.send(:footer_menu_registry).reverse.each do |partial| %>
            <% if File.exist?(partial) %>
                <%= render file: partial rescue nil %>
            <% else %>
                <%= render partial rescue nil %>
            <% end %>
        <% end %>
      </ul>
    </nav>
  </footer>
  <%= debug(params) if Rails.env.development? %>
</div>
